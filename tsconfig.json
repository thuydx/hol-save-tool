{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/store/*": [
        "./src/store/*"
      ],
      "@/pages/*": [
        "./src/app/[lang]/(pages)/*"
      ],
      "@/views/*": [
        "./src/app/(views)/*"
      ],
      "@/public/*": [
        "./public/*"
      ],
      "@coreui/coreui/*": [
        "./node_modules/@coreui/coreui/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/models/*": [
        "./src/lib/models/*"
      ],
      "@/repositories/*": [
        "./src/lib/repositories/*"
      ],
      "@/hooks/*": [
        "./src/lib/hooks/*"
      ],
      "@/types/*": [
        "./src/lib/types/*"
      ],
      "@/columns/*": [
        "./src/lib/columns/*"
      ],
      "@/constants/*": [
        "./src/lib/constants/*"
      ],
      "@/services/*": [
        "./src/lib/services/*"
      ],
      "@/providers/*": [
        "./src/lib/providers/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".idea",
    ".next",
    "dist",
    "build",
    ".yarn"
  ]
}
